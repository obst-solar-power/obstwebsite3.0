    </script>
    <!-- change animation on mobile -->
    <script>
      const setDelay = function () {
        const allFirstCols = document.querySelectorAll("div[data-aos='fade-down-right']");
        const allSecCols = document.querySelectorAll("div[data-aos='fade-down-left']");
        console.log(allFirstCols);
        console.log(allSecCols);
        for (let i = 0; i < allFirstCols.length; i++) {
          allFirstCols[i].setAttribute("data-aos", "fade-up");
          allSecCols[i].removeAttribute("data-aos-delay");
          allSecCols[i].setAttribute("data-aos", "fade-down");
        }
      };
      const mqList = window.matchMedia("(max-width: 1024px)");
      // If media query matches on load
      if (mqList.matches) {
        setDelay(); // using Hugo's function
      }
    </script>
